<div class="d-flex flex-column align-items-center p-2">

  {{! profile header }}
  <div class="card w-100">
    <div class="card-body">
      <div class="d-flex flex-row gap-2">
        <div>
          {{#if user.avatar_id}}
            <img
              src="/images/avatars/svg/{{avatar.image_url}}"
              class="profile-avatar"
              alt="..."
            />
          {{else}}
            <img
              src="/images/avatars/svg/defaultAvatar.svg"
              class="profile-avatar"
              alt="..."
            />
          {{/if}}
          
        </div>
        <div
          class="d-flex flex-column justify-items-center justify-content-center flex-fill"
        >
          <h4>{{user.display_name}}</h4>
          <p style="color: rgb(157, 157, 157);">@{{user.username}}</p>

          {{#if answers}}
            <p>Answered {{countArrayEntries answers}} questions</p>
          {{else}}
            <p>{{user.display_name}} hasn't answered any questions yet!</p>
          {{/if}}
        </div>
      </div>
    </div>
  </div>

  {{#if answers}}
    <div class="mt-3 d-flex flex-column gap-1" id="answers-container">
      {{#each answers as |answer|}}
        {{> questionAnswer}}
      {{/each}}
    </div>
  {{/if}}
</div>

<style>
  h4, p { margin: 0px } .profile-avatar { width: 100px; height: 100px; overflow:
  hidden; }

  #answers-container {
    max-width: 90%;
  }
</style>